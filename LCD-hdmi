ORIG_COPY_PREFIX=".wsorig"

function restoreOrDelete {
	if test -f "$1$ORIG_COPY_PREFIX"; then
		echo "Restoring '$1' from backup..."
		sudo mv "$1$ORIG_COPY_PREFIX" "$1"
	else
		if test -f "$1"; then
			echo "Deleting '$1'..."
			sudo rm -f "$1"
		fi
	fi
}

#sudo cp -rf ./etc/modules-HDMI  /etc/modules

restoreOrDelete "/usr/share/X11/xorg.conf.d/45-evdev.conf"

restoreOrDelete "/usr/share/X11/xorg.conf.d/99-fbturbo.conf"

restoreOrDelete "/usr/share/X11/xorg.conf.d/99-calibration.conf"

restoreOrDelete "/boot/config.txt"

restoreOrDelete "/boot/cmdline.txt"

restoreOrDelete "/etc/inittab"

restoreOrDelete "/etc/rc.local"

read -p "Reboot now? [yn] " choice
case "$choice" in 
  y )
	echo "Rebooting now...";
	sudo reboot;;
  n|* )
	echo "Please reboot manually";;
esac
